<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ViewPassActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/passview"
        android:textSize="25sp"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/receivedText"
        android:text="Received 12:00"
        android:layout_below="@+id/passview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/domnulgrigorescu"
        android:layout_width="wrap_content"
        android:layout_below="@+id/passview"
        android:layout_height="wrap_content"
        android:src="@drawable/grigoras" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:layout_height="match_parent"
        android:orientation="horizontal"

        android:gravity="center_vertical|bottom"
        android:layout_alignParentBottom="true" >


        <EditText
            android:layout_width="fill_parent"
            android:layout_toRightOf="@+id/my_button"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="Answer"
            android:layout_weight=".2" />

        <Button
            android:id="@+id/send_button"
            android:text="Send"
            android:layout_weight=".6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
